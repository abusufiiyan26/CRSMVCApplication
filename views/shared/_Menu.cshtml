<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @RenderSection("meta", required: false)

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <meta name="description" content="admin-themes-lab" />
    <meta name="author" content="themes-lab" />
    <link rel="shortcut icon" href="images/test.png" type="image/png" />
    <link href="~/assets/global/css/style.css" rel="stylesheet" />
    <link href="~/assets/global/css/theme.css" rel="stylesheet" />
    <link href="~/assets/global/css/ui.css" rel="stylesheet" />

    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <link href="~/assets/global/plugins/step-form-wizard/css/step-form-wizard.min.css" rel="stylesheet" />

    <!--JQGRID TABLE CSS -->
    <link href="~/Content/jquery.jqGrid/ui.jqgrid.css" rel="stylesheet" />
    <link href="~/Content/gridmaster.css" rel="stylesheet" />
    <link href="~/Content/blue-jquery-ui/jquery-ui.css" rel="stylesheet" />

    <!-- FONT AWESOME-->
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-animation.min.css" rel="stylesheet" />

    <!-- JTABLE TABLE CSS -->
    <link href="~/Scripts/jtable/themes/lightcolor/blue/jtable.min.css" rel="stylesheet" type="text/css" />

    <!-- PAGE STYLE -->
    <link href="~/assets/global/plugins/metrojs/metrojs.min.css" rel="stylesheet">
    <link href="~/assets/global/plugins/maps-amcharts/ammap/ammap.min.css" rel="stylesheet">

    <!-- CSS STYLE -->
    <link href="~/Scripts/css/validationengine.jquery.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/jquery")

    <script type="text/javascript">
        $(document).ready(function () {
            $("#accordian h3").click(function () {
                $("#accordian ul ul").slideUp();
                if (!$(this).next().is(":visible")) {
                    $(this).next().slideDown();
                }
            });
        });
    </script>
    @*<script type="text/javascript" language="javascript">
            function disableBackButton() {
                window.history.forward()
            }
            disableBackButton();
            window.onload = disableBackButton();
            window.onpageshow = function (evt) { if (evt.persisted) disableBackButton() }
            window.onunload = function () { void (0) }
        </script>*@
    <script src="~/ViewsScript/Account/Logout.js"></script>

    @RenderSection("styles", required: false)
</head>
<body id="theme" class="@Session["RazorTheme"]">
    <section>
        <!-- BEGIN SIDEBAR -->
        <div class="sidebar">
            <div class="logopanel" style="background-color:white;text-align:center">
                <img src="@Session["APHeader"]" style="max-width:100%;max-height:100%" />
            </div>
            <div class="sidebar-inner">
                <div class="sidebar-top big-img">
                    <div class="user-image">
                        <img src="@Session["UserImage"]" style="width:200px; height:130px" class="img-responsive img-circle" alt="gallery 3">
                    </div>
                    <h4>@Session["Name"]</h4><br />
                </div>
                <br />
                <div id="accordian">
                    @Html.Action("HeaderMenu", "Dashboard")
                </div>
                <ul class="nav nav-sidebar"></ul>
                <!-- SIDEBAR WIDGET FOLDERS -->
                <div class="sidebar-widgets" style="visibility:hidden">
                    <p style="visibility:hidden" class="menu-title widget-title">Folders <span class="pull-right"><a href="#" class="new-folder"> <i class="icon-plus"></i></a></span></p>
                    <ul class="folders">
                        <li>
                            <a style="visibility:hidden" href="#"><i class="icon-doc c-primary"></i>My documents</a>
                        </li>
                        <li>
                            <a style="visibility:hidden" href="#"><i class="icon-picture"></i>My images</a>
                        </li>
                        <li>
                            <a style="visibility:hidden" href="#"><i class="icon-lock"></i>Secure data</a>
                        </li>
                        <li>
                            <a href="#"><i class="icon-lock"></i>Secure data</a>
                        </li>
                        <li>
                            <a href="#"><i class="icon-lock"></i>Secure data</a>
                        </li>
                    </ul>
                </div>
                <div class="sidebar-footer clearfix">
                    <a class="pull-left footer-settings" href="#" data-rel="tooltip" data-placement="top" data-original-title="Settings">
                        <i class="icon-settings"></i>
                    </a>
                    <a class="pull-left toggle_fullscreen" href="#" data-rel="tooltip" data-placement="top" data-original-title="Fullscreen">
                        <i class="icon-size-fullscreen"></i>
                    </a>

                    @if (Session["RoleID"].ToString() == "2")
                    {
                        <a class="pull-left" href="/Home/LogOut" data-rel="tooltip" data-placement="top" data-original-title="Lockscreen">
                            <i class="icon-lock"></i>
                        </a>
                        <a class="pull-left btn-effect" href="/Home/LogOut" data-modal="modal-1" data-rel="tooltip" data-placement="top" data-original-title="Logout">
                            <i class="icon-power"></i>
                        </a>
                    }
                    else if (Session["RoleID"].ToString() == "3")
                    {
                         <a class="pull-left" href="/Home/LogOut" data-rel="tooltip" data-placement="top" data-original-title="Lockscreen">
                            <i class="icon-lock"></i>
                        </a>
                        <a class="pull-left btn-effect" href="/Home/LogOut" data-modal="modal-1" data-rel="tooltip" data-placement="top" data-original-title="Logout">
                            <i class="icon-power"></i>
                        </a>
                    }
                    else
                    {
                        <a class="pull-left" href="/Home/LogOutAdmin" data-rel="tooltip" data-placement="top" data-original-title="Lockscreen">
                            <i class="icon-lock"></i>
                        </a>
                        <a class="pull-left btn-effect" href="/Home/LogOutAdmin" data-modal="modal-1" data-rel="tooltip" data-placement="top" data-original-title="Logout">
                            <i class="icon-power"></i>
                        </a>
                    }
                </div>
            </div>
        </div>
        <!-- END SIDEBAR --><div></div>
        <div class="main-content">
            <!-- BEGIN TOPBAR -->
            <div class="topbar">
                <div class="header-left" style="display: block;">
                    <div class="topnav">
                        <a class="menutoggle" href="#" data-toggle="sidebar-collapsed"><span class="menu__handle"><span>Menu</span></span></a>
                        <ul class="nav nav-icons">
                            <li><span class="octicon octicon-cloud-upload"></span></li>
                            <li><span class="octicon octicon-link"></span></li>
                            <li><span class="octicon octicon-device-camera"></span></li>
                            <li><span class="octicon octicon-comment-discussion"></span></li>
                        </ul>
                    </div>
                </div>
                <div class="header-right">
                    <ul class="header-menu nav navbar-nav">
                        <!-- BEGIN USER DROPDOWN -->
                        <li class="dropdown" id="user-header">
                            <a href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                <span class="username">Hi, @Session["Name"]</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="~/UpdateInfo/ManagePersonalInfo"><i class="icon-user"></i><span>My Profile</span></a>
                                </li>
                                <li>
                                    @if (Session["RoleID"].ToString() == "2")
                                    {
                                        <a href="../UpdateInfo/ChangePassword"><i class="icon-calendar"></i><span>Change Password</span></a>
                                    }
                                    else
                                    {
                                        <a href="../UpdateInfo/ChangePIN"><i class="icon-calendar"></i><span>Change PIN</span></a>
                                        <a href="../UpdateInfo/updateChallenge"><i class="icon-calendar"></i><span>Update Challenge Response</span></a>
                                    }
                                </li>
                                <li>
                                    <a href="../Home/LogOut" @*onclick="submit_logout();"*@><i class="icon-logout"></i><span>Logout</span></a>
                                </li>
                            </ul>
                        </li>
                        <!-- END USER DROPDOWN -->
                        <!-- CHAT BAR ICON -->
                        <li id="quickview-toggle"><a href="#"><i class="icon-bubbles"></i></a></li>
                    </ul>
                </div>
                <!-- header-right -->
            </div>

            <!-- END
            TOPBAR -->
            <!-- BEGIN PAGE CONTENT -->
            @RenderBody()
            <!-- END PAGE CONTENT -->
            <div class="footer">
                <div class="copyright">
                    <p class="pull-left sm-pull-reset"> <span>Copyrights <span class="copyright">©</span> 2015 </span> <span> SDN BHD</span> </p>
                    <p class="pull-right sm-pull-reset"> <span><a href="#" class="m-r-10">Support</a> | <a href="#" class="m-l-10 m-r-10">Terms of use</a> | <a href="#" class="m-l-10">Privacy Policy</a></span> </p>
                </div>
            </div>
        </div>
        <!-- END MAIN CONTENT -->
    </section>
    <!-- BEGIN PRELOADER -->
    <div class="loader-overlay">
        <div class="spinner">
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
        </div>
    </div>
    <!-- END PRELOADER -->
</body>
</html>
