@model OneCRS.MVC.Models.Admin.UpdateUser
<br />
<form id="UpdateUserFormz1">
    <div id="updatepersonalDetails">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>ID Type</label>
                    <select class="form-control form-white" id="UpdateIDType" name="UpdateIDType" onfocus="this.defaultIndex=this.selectedIndex;" onchange="this.selectedIndex=this.defaultIndex;">
                        <option value="IC">IC</option>
                        <option value="PP">Passport</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label>IC NO / Passport</label>
                    <input type="text" readonly="readonly" class="form-control form-white" id="UpdateICNo" name="UpdateICNo" required data-parsley-group="block0">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" readonly="readonly" class="form-control form-white" id="UpdateName" name="UpdateName" required data-parsley-group="block0">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control form-white" id="UpdateEmail" name="UpdateEmail" required data-parsley-group="block0">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Telephone No</label>
                    <input type="text" class="form-control form-white" id="UpdateMobile_No" name="UpdateMobile_No" required data-parsley-group="block0">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Gender</label>
                    <select class="form-control form-white" id="UpdateGender" name="UpdateGender" data-placeholder="Select Gender..." onfocus="this.defaultIndex=this.selectedIndex;" onchange="this.selectedIndex=this.defaultIndex;">
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Date of Birth</label>
                    <div class="prepend-icon">
                        <input type="text" readonly="readonly" id="UpdateDOB" class="form-control form-white" placeholder="Select a date...">
                        <i class="icon-calendar"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" class="form-control form-white" id="UpdateAddress" name="UpdateAddress" required data-parsley-group="block0">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Country</label>
                    <select class="form-control form-white" id="UpdateCountryID" name="UpdateCountryID" data-search="true">
                        <option selected value="">Select Country</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>State</label>
                    <select class="form-control form-white" id="UpdateStateID" name="UpdateStateID" data-search="true">
                        <option selected value="">Select State</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Postcode</label>
                    <input type="text" pattern="[0-9]*" maxlength="6" class="form-control form-white" id="UpdatePostcode" name="UpdatePostcode" required data-parsley-group="block0">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>City</label>
                    <input type="text" class="form-control form-white" id="UpdateCity" name="UpdateCity" required data-parsley-group="block0">
                </div>
            </div>
        </div>
    </div>
</form>
<div id="button2" style="text-align:right">
    <input type="button" class="btn btn-fb btn-embossed" value="UPDATE" data-loading-text="Loading..." id="btnUpdate" />
</div>
