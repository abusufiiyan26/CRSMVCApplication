<legend style=" margin-left:20px;background-color:#1f497d; padding-left:30px; padding-top:2px; padding-right:50px; padding-bottom:2px; color:white; border-radius:15px; border:3px solid #eeece1; font-size:20px; "><b>Manage Document</b></legend>
<br />
<div class="row" ng-controller="ProjectController">
    <div class="col-lg-6">
        <div class="form-group">
            <label for=""><span style="color: red; font-size: 18px">*</span> Supporting Document</label>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <label>
                    <input type="radio" value="Yes" name="SD_IsRequired" id="sdrequired1" data-parsley-group="block1" data-radio="iradio_square-blue" data-parsley-errors-container='div[id="condition-error"]'>
                    Yes
                </label>
            </div>
        </div>
        <div class="form-group" id="supdoc" style="display:none">
            <div class="col-lg-8">
                <div class="radio">
                    <label>
                        <input type="checkbox" name="SD_IsIC" id="sdic" data-checkbox="icheckbox_square-blue">
                        IC
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="checkbox" name="SD_IsSSM" id="sdssm" data-checkbox="icheckbox_square-blue">
                        SSM
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="checkbox" name="SD_IsRegSlip" id="sdregslip" data-checkbox="icheckbox_square-blue">
                        Registration Slip / Email
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="checkbox" name="SD_IsAuthLetter" id="sdauth" data-checkbox="icheckbox_square-blue">
                        Authorization Letter
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="checkbox" name="SD_IsPassPort" id="SD_IsPassPort" data-checkbox="icheckbox_square-blue">
                        Passport Picture
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="checkbox" name="SD_IsSupporting1" id="SD_IsSupporting1" data-checkbox="icheckbox_square-blue">
                        Payment Slip
                    </label>
                </div>
                @*<div class="radio">
                    <label>
                        <input type="checkbox" name="SD_IsSupporting2" id="SD_IsSupporting2" data-checkbox="icheckbox_square-blue">
                        XXXXSupporting2XXXX
                    </label>
                </div>*@
            </div>
        </div>
        <div class="col-md-4">
            <label>
                <input type="radio" value="No" name="SD_IsRequired" id="sdrequired0" data-parsley-group="block1" data-radio="iradio_square-blue" data-parsley-errors-container='div[id="condition-error"]' required>
                No
            </label>
        </div>
    </div>
</div>

