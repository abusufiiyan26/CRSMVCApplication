@model OneCRS.MVC.Models.RegisterModel
@{
    ViewBag.Title = "1CRS User Registration";
}
@section Head
{
    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="~/css/tmm_form_wizard_style_demo.css" />
    <link rel="stylesheet" href="~/css/grid.css" />
    <link rel="stylesheet" href="~/css/tmm_form_wizard_layout.css" />
    <link rel="stylesheet" href="~/css/fontello.css" />
    <link rel="stylesheet" href="~/css/super-awesome.css" />
    <style>
        label {
            width: 120px;
            margin-right: 10px;
        }

        input[type="radio"] {
            -webkit-appearance: none;
            -moz-appearance: none;
            -ms-appearance: none;
            -o-appearance: none;
            position: relative;
            right: 0;
            bottom: 0;
            left: 0;
            height: 15px;
            width: 15px;
            -webkit-transition: all 0.15s ease-out 0s;
            -moz-transition: all 0.15s ease-out 0s;
            transition: all 0.15s ease-out 0s;
            background: #cbd1d8;
            border: none;
            color: #fff;
            cursor: pointer;
            display: inline-block;
            outline: none;
            position: relative;
            border-radius: 50%;
        }

        input[type="radio"]:checked {
            border: 1px solid red;
        }
    </style>
    <link rel="shortcut icon" href="~/favicon.png">

    <!-- Header View -->
    <link rel="stylesheet" href="~/assets/registration/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/registration/css/animate.css">
    
    <link rel="stylesheet" href="~/assets/registration/css/slick.css">
    <link rel="stylesheet" href="~/assets/registration/js/rs-plugin/css/settings.css">
    <link rel="stylesheet" href="~/assets/registration/css/styles.css">

    <link href="~/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet">
    <link href="~/assets/global/plugins/rateit/rateit.css" rel="stylesheet">
    @*<link href="~/assets/global/css/style.css" rel="stylesheet">*@
    <link href="~/assets/global/css/ui.css" rel="stylesheet">

    <!-- Font awesome CSS-->
    <link rel="stylesheet" href="~/assets/registration/css/font-awesome.min.css">
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-animation.min.css" rel="stylesheet" />
    <link href="~/assets/global/css/icons/font-awesome/font-awesome.css" rel="stylesheet">
    <!-- End Header View -->
    <!-- Loading state-->
    <style type="text/css">
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background: rgba( 255, 255, 255, .8 ) url('http://i.stack.imgur.com/FhHRx.gif') 50% 50% no-repeat;
        }

        body.loading {
            overflow: hidden;
        }

        body.loading .modal {
            display: block;
        }
    </style>

}
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @*<script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/bundles/jqueryval")"></script>*@
    <script src="~/assets/registration/js/tmm_form_wizard_custom.js"></script>
    <script src="~/Scripts/SimpleWizardForm.js"></script>
    <script src="~/Scripts/jquery.steps.js"></script>
    <script src="~/Scripts/jquery.steps.min.js"></script>

    <!--Start Date Picker-->
    <script src="~/assets/global/plugins/jquery-ui/jquery-ui-1.11.2.min.js"></script>
    <script src="~/assets/registration/js/modernizr.custom.32033.js"></script>
    <script src="~/assets/global/js/application.js"></script> <!-- Main Application Script -->
    <script src="~/assets/global/js/plugins.js"></script> <!-- Main Plugin Initialization Script -->
    <script src="~/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js"></script> <!-- >Bootstrap Date Picker -->
    <!--End Date Picker-->
    <!--Landing Page javascript-->
    <script src="~/assets/global/plugins/bootbox/bootbox.min.js"></script>
    <script src="~/assets/registration/js/scripts.js"></script>

    <!-- VALIDATION JQUERY -->
    <script src="~/Scripts/jquery.validationEngine.js"></script>
    <script src="~/Scripts/languages/jquery.validationEngine-en.js"></script>
    <!--ViewScript -->
    <script src="~/ViewsScript/Account/Register.js"></script>
    <script src="~/Content/loader/loadingoverlay.min.js"></script>
    <script>
        $("#registerform").submit(function (event) {
            $.LoadingOverlay("show");
        });
    </script>
}
@using (Html.BeginForm("Index", "Register", FormMethod.Post, new { id = "registerform" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <header>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container" style="margin-top:10px;margin-bottom:1px">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <a href="~/home">
                        <img src="~/assets/registration/img/freeze/logo.png" style="width:250px" alt="" class="logo">
                    </a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="~/">HOME</a>
                        </li>
                        <li>
                            <a href="~/Register">USER REGISTRATION</a>
                        </li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-->
        </nav>
    </header>
    <br /><br /><br />
    <div id="content">
        <div class="form-container">
            <div id="tmm-form-wizard" class="container substrate">
                <div class="row">
                    <div class="col-xs-12">
                        <h2 class="form-login-heading">1CRS<span>REGISTRATION PAGE</span></h2>
                    </div>
                </div><!--/ .row-->
                <div class="row stage-container">

                    <div id="stage1" class="stage col-md-3 col-sm-3" style="display:none">
                        <div class="stage-header head-icon head-icon-user"></div>
                        <div class="stage-content">
                            <h3 class="stage-title">Personal Information</h3>
                            <div class="stage-info">
                                Enter your Personal Information
                            </div>
                        </div>
                    </div><!--/ .stage-->
                    <div id="stage1cur" class="stage tmm-current col-md-3 col-sm-3">
                        <div class="stage-header head-icon head-icon-user"></div>
                        <div class="stage-content">
                            <h3 class="stage-title">Personal Information</h3>
                            <div class="stage-info">
                                Enter your Personal Information
                            </div>
                        </div>
                    </div><!--/ .stage-->
                    <div id="stage1suc" class="stage tmm-success col-md-3 col-sm-3" style="display:none">
                        <div class="stage-header head-icon head-icon-user"></div>
                        <div class="stage-content">
                            <h3 class="stage-title">Personal Information</h3>
                            <div class="stage-info">
                                Enter your Personal Information
                            </div>
                        </div>
                    </div><!--/ .stage-->

                    <div id="stage2" class="stage col-md-3 col-sm-3">
                        <div class="stage-header head-icon head-icon-lock"></div>
                        <div class="stage-content">
                            <h3 class="stage-title">Account Information</h3>
                            <div class="stage-info">
                                Enter your Username & Password
                            </div>
                        </div>
                    </div><!--/ .stage-->
                    <div id="stage2cur" class="stage tmm-current col-md-3 col-sm-3" style="display:none">
                        <div class="stage-header head-icon head-icon-lock"></div>
                        <div class="stage-content">
                            <h3 class="stage-title">Account Information</h3>
                            <div class="stage-info">
                                Enter your Username & Password
                            </div>
                        </div>
                    </div><!--/ .stage-->
                    <div id="stage2suc" class="stage tmm-success col-md-3 col-sm-3" style="display:none">
                        <div class="stage-header head-icon head-icon-lock"></div>
                        <div class="stage-content">
                            <h3 class="stage-title">Account Information</h3>
                            <div class="stage-info">
                                Enter your Username & Password
                            </div>
                        </div>
                    </div><!--/ .stage-->

                    <div id="stage3" class="stage col-md-3 col-sm-3">
                        <div class="stage-header head-icon head-icon-payment"></div>
                        <div class="stage-content">
                            <h3 class="stage-title">Security Information</h3>
                            <div class="stage-info">
                                Enter your Security Details
                            </div>
                        </div>
                    </div><!--/ .stage-->
                    <div id="stage3cur" class="stage tmm-current col-md-3 col-sm-3" style="display:none">
                        <div class="stage-header head-icon head-icon-payment"></div>
                        <div class="stage-content">
                            <h3 class="stage-title">Security Information</h3>
                            <div class="stage-info">
                                Enter your Security Details
                            </div>
                        </div>
                    </div><!--/ .stage-->
                    <div id="stage3suc" class="stage tmm-success col-md-3 col-sm-3" style="display:none">
                        <div class="stage-header head-icon head-icon-payment"></div>
                        <div class="stage-content">
                            <h3 class="stage-title">Security Information</h3>
                            <div class="stage-info">
                                Enter your Security Details
                            </div>
                        </div>
                    </div><!--/ .stage-->

                    <div id="stage4" class="stage col-md-3 col-sm-3">
                        <div class="stage-header head-icon head-icon-details"></div>
                        <div class="stage-content">
                            <h3 class="stage-title">Confirm Your Details</h3>
                            <div class="stage-info">
                                Confirm and Validate the Application Form
                            </div>
                        </div>
                    </div><!--/ .stage-->
                    <div id="stage4cur" class="stage tmm-current col-md-3 col-sm-3" style="display:none">
                        <div class="stage-header head-icon head-icon-details"></div>
                        <div class="stage-content">
                            <h3 class="stage-title">Confirm Your Details</h3>
                            <div class="stage-info">
                                Confirm and Validate the Application Form
                            </div>
                        </div>
                    </div><!--/ .stage-->
                    <div id="stage4suc" class="stage tmm-success col-md-3 col-sm-3" style="display:none">
                        <div class="stage-header head-icon head-icon-details"></div>
                        <div class="stage-content">
                            <h3 class="stage-title">Confirm Your Details</h3>
                            <div class="stage-info">
                                Confirm and Validate the Application Form
                            </div>
                        </div>
                    </div><!--/ .stage-->
                </div>

                <div id="PersonalDetailsPnl" class="wizard-step" style="display:none">
                    @Html.Partial("~/Views/Register/_PersonalDetails.cshtml")
                    <div class="wizard-nav">
                        <div class="next">
                            <input class="button button-control" type="button" value="Next Step >" style="width:100px;height:30px" id="validatePersonalDetails" />
                            @*<div class="button-divider"></div>*@
                        </div>
                    </div>
                </div><!--/ .form-wizard-->

                <div id="AccountDetailsPnl" class="wizard-step" style="display:none">
                    @Html.Partial("~/Views/Register/_AccountDetails.cshtml")
                    <div class="wizard-nav">
                        <div class="prev">
                            <input class="button button-control" type="button" value="< Prev Step" style="width:100px;height:30px" onclick="showPersonalDetailsPnl();" />
                        </div>
                        <div class="next">
                            <input class="button button-control" type="button" value="Next Step >" style="width:100px;height:30px" onclick="validateAccountDetails();" />
                        </div>
                    </div>
                </div>

                <div id="SecurityDetailsPnl" class="wizard-step" style="display:none">
                    @Html.Partial("~/Views/Register/_SecurityDetails.cshtml")
                    <div class="wizard-nav">
                        <div class="prev">
                            <input class="button button-control" type="button" value="< Prev Step" style="width:100px;height:30px" onclick="showAccountDetailsPnl();" />
                        </div>
                        <div class="next">
                            <input class="button button-control" type="button" value="Next Step >" style="width:100px;height:30px" onclick="validateSecurityDetails();" />
                        </div>
                    </div>
                </div><!--/ .form-wizard-->

                <div id="ConfirmationPnl" class="wizard-step wizard-confirmation" style="display:none">
                    @Html.Partial("~/Views/Register/_ConfirmationDetails.cshtml")
                    <div class="wizard-nav">
                        <div class="prev">
                            <input class="button button-control" type="button" value="< Prev Step" style="width:100px;height:30px" onclick="showSecurityDetailsPnl();" />
                        </div>
                        <div class="next">
                            <input class="button button-control" type="submit" id="btnConfirmSubmit" style="width:100px;height:30px" value="Submit" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer style="background-color:white;text-align:center">
        <div class="container">
            <div class="rights">
                <p>Copyright &copy; 2015  Sdn Bhd. All right reserved</p>
                <p>1CRS is best viewed on a screen with 1024 x 768 resolution or higher with Internet Explorer 10.0, Chrome, and Safari</p>
            </div>
        </div>
    </footer>
    <div class="modal"><!-- Place at bottom of page --></div>
}