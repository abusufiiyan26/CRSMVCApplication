                    @*@Html.CheckBoxFor(model => model.C_MediumIsSmart, new { @class = "icheckbox_square-blue" })*@
                    @*<input type="checkbox" name="C_MediumIsSmart" id="cmediumsmart" data-checkbox="icheckbox_square-blue">*@
                    Smart Card
